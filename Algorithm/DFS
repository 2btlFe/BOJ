void dfs(int x) {
  if(c[x]) return;
  c[x] = true;
  for(auto i : a[x]) {
    dfs(i);
  }
  return;
}

int orient[4][2] = {{-1, 0}, {1, 0}, {0, -1}, {0, 1}};

void dfs2(int r, int c) {
  if(c[r][c]) return;
  c[r][c] = true;
  for(int i = 0; i < 4; i++) {
    int nr = r + orient[i][0];
    int nc = c + orient[i][1];
    
    if(nr < 0 || nr >= N || nc < 0 || nc >= N || c[nr][nc]) continue;
    dfs(nr, nc);
  }
  return;
}
